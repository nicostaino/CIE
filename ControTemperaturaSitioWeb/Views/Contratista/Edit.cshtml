@model Clases.Models.Contractor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script>
    function HabilitarIngreso(action){
    $("#RetiredBefore").prop("disabled",action);
    $("#DescriptionOut").prop("disabled",action);
    $("#IngressDateTime").prop("disabled",action);
    $("#EgressDateTime").prop("disabled",action);
    $("#DocumentEmployee").prop("disabled",action);
    $("#EmployeeId").prop("disabled",action);
    $("#DocumentForeman").prop("disabled",action);
    $("#ForemanId").prop("disabled",action);
    $("#UserIdIngressRegister").prop("disabled",action);
    $("#ContractorId").prop("disabled",action);
    $("#TypeEmployeeId").prop("disabled",action);
    $("#groupNumber").prop("disabled",action);
    $("#isForeman").prop("disabled",action); 
    }


</script>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-primary">
            <div class="panel-heading"><h3 class="panel-title">Editar Contratista</h3></div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Contractor</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="">
                            @Html.LabelFor(model => model.IsEnabled, htmlAttributes: new { @class = "control-label col-md-2 " })
                            @Html.CheckBoxFor(m => m.IsEnabled, new { @class = "col-md-1", @style = "margin-top:10px;" })
                            @Html.ValidationMessageFor(model => model.IsEnabled, "", new { @class = "text-danger " })
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Editar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                }

            </div> <!-- panel-body -->
        </div> <!-- panel -->
    </div> <!-- col -->
</div>

